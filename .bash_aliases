# GIT
alias gs="git status -sb"
alias gh="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"

alias dev="git checkout develop"
alias mas="git checkout master"
alias stag="git checkout staging"
alias stage="git checkout staging"

alias gc="git commit"
alias ga="git add"
alias gca="git commit -am"

alias push="git push"
alias pull="git pull"

# Ruby/Rails/Dev
alias r="rake"
alias be="bundle exec"
alias t="bundle exec rspec -f d --colour"

# Typos
alias rail='rails'

# Aliasses
alias ll="ls -lh"
alias ls="ls -ll"
alias la="ls -lah"

# GOV.UK
alias run="cd /var/govuk/development/ && bowl"
